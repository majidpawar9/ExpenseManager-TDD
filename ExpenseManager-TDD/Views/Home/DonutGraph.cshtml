<input id="ID" value="Show Graph" type="button"/>
<br/>
<div>
    <canvas id="myChart" style="max-width:400px; max-height:400px"></canvas>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script type="text/javascript">
    $(function () {
        $("#ID").click(function () {
            $.ajax({
                type: "POST",
                url: "/Home/GetExpenseData",
                data:"",
                contextType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccessResult,
                error: OnError
            });
            function OnSuccessResult(data) {

                var _data = data;
                var _chartLabels = _data[1];
                var _chartData = _data[0];

                var barColor = ["red","green","blue","yellow"];

                new Chart("myChart",
                    {
                        type: "bar",
                        data: {
                            labels: _chartLabels,
                            datasets: [{
                                backgroundColor: barColor,
                                data: _chartData
                            }]
                        }
                    });

            }
            function OnError(err) {

            }
        });
    })
</script>
